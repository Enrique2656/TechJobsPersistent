@model TechJobsPersistent.ViewModels.AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label asp-for="Name" asp-items="@Model.Name">Name</label>
        <input class="form-control" asp-for="Name" asp-items="@Model.Name" />
        <span></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployerId">Employer</label>
        <select asp-for="EmployerId" asp-items="@Model.Employers"></select>
        <a class="nav-link text-dark" asp-area="" asp-controller="Employer" asp-action="Add">Add Emoloyer</a>
    </div>
    <div class="form-group">
        
        @foreach (var skill in Model.Skills)
        {
            <label asp-for="SkillId" asp-items="@skill">@skill.Text</label>
            <input type="checkbox" name="selectedSkills" value="@skill.Value" />
        }
        <a class="nav-link text-dark" asp-area="" asp-controller="Skill" asp-action="Add">Add Skill</a>
        <span></span>
    </div>

    <input type="submit" value="Add Job" />
</form>

